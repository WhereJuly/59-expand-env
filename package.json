{
    "name": "@wherejuly/expand-env",
    "version": "2.0.1",
    "description": "Expand loaded environment variables in JavaScript objects or JSON, nested objects, arrays, strings too.",
    "type": "module",
    "main": "./code/index.js",
    "module": "./code/index.js",
    "types": "./types/index.d.ts",
    "scripts": {
        "test": "tsx .delivery/scripts/test.ts",
        "test:coverage": "npm run test -- -- --coverage",
        "check-types": "npx tsc --noEmit --project .",
        "vitest": "vitest run --config tests/.ancillary/config/vitest.config.ts",
        "package:build": "tsx .delivery/scripts/build.ts",
        "lint": "npx eslint ./src",
        "package:de-alias": "npx tsc-alias -p ./.delivery/configuration/tsconfig.json --verbose",
        "package:bundle:copy": "cpy ./package.json ./LICENSE ./readme.md ./.delivery/.builds/dist",
        "package:pack": "cd ./.delivery/.builds/dist && npm pack",
        "package:lint:readme": "npx markdown-link-check --progress --quiet ./readme.md",
        "package:publish": "npm publish ./.delivery/.builds/dist"
    },
    "author": {
        "name": "Valentine Shi",
        "email": "valentineshi.dev@gmail.com",
        "url": "https://valentineshi.dev"
    },
    "license": "MIT",
    "homepage": "https://github.com/WhereJuly/59-expand-env#readme",
    "issues": "https://github.com/WhereJuly/59-expand-env/issues",
    "keywords": [
        "application",
        "env",
        "configuration",
        "environment",
        "variables",
        "expand",
        "object",
        "nested",
        "array",
        "object",
        "integer",
        "boolean",
        "modifier",
        "recursive"
    ],
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "lodash.clonedeep": "^4.5.0",
        "lodash.isobject": "^3.0.2",
        "lodash.isstring": "^4.0.1",
        "lodash.mapvalues": "^4.6.0"
    },
    "devDependencies": {
        "@dotenvx/dotenvx": "1.51.0",
        "@eslint/js": "^9.36.0",
        "@types/lodash.clonedeep": "^4.5.9",
        "@types/lodash.isobject": "^3.0.9",
        "@types/lodash.isstring": "^4.0.9",
        "@types/lodash.mapvalues": "^4.6.9",
        "@types/node": "^20.19.17",
        "@types/tap": "^15.0.12",
        "@vitest/coverage-v8": "^3.2.4",
        "chalk": "^5.6.2",
        "cpy-cli": "^6.0.0",
        "rimraf": "^5.0.10",
        "tsx": "^4.20.6",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.1",
        "vitest": "^3.2.4"
    }
}
